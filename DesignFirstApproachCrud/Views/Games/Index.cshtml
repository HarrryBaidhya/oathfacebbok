@model IEnumerable<DesignFirstApproachCrud.Models.Game>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <a href="@Url.Action("AddGames", "Games")"><i class="btn btn-success btn-sm">Create</i></a>
    <br />


    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameTypes)
            </th>
            
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameTypes)
                </td>
                <td>
                   
                    <a href="@Url.Action("Delete", "Students", new { id = item.GID })">
                        <i class="btn btn-danger btn-sm">Delete</i>
                    </a>
                </td>
            </tr>
        }

    </table>
</body>
</html>
